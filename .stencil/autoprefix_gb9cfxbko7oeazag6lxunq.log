imr-language-list {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-gap: 10px;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center; }
  imr-language-list imr-language-card {
    padding-bottom: 1em;
    cursor: pointer; }
    imr-language-list imr-language-card h4 {
      margin-bottom: 0; }
    imr-language-list imr-language-card p {
      margin-top: .5em;
      margin-bottom: 0;
      line-height: 1.5; }
    imr-language-list imr-language-card img {
      width: 100%; }
      imr-language-list imr-language-card img:hover {
        border: 5px solid blue;
        border-radius: 10px; }