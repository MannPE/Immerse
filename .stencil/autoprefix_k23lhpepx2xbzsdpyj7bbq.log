imr-view-word-list {
  -ms-flex-line-pack: center;
  align-content: center;
  display: grid;
  grid-auto-rows: auto;
  grid-template-columns: repeat(1, 1fr);
  grid-gap: 2em; }
  imr-view-word-list .noun {
    color: #107896; }
  imr-view-word-list .verb {
    color: #829356; }
  imr-view-word-list imr-word-item {
    padding-bottom: 5px;
    border-bottom: 1px solid gray;
    display: -webkit-inline-box;
    display: -ms-inline-flexbox;
    display: inline-flex; }
    imr-view-word-list imr-word-item span {
      width: 60%; }